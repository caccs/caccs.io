<% provide(:title, "Lista de usuários") %>

<div class="right_col" role="main">
  <div class="">
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h1><center>Lista de Usuários</center></h1>
          </div>

          <div class="col-xs-12 col-sm-12 col-md-12" align="left">
            <div class="col-xs-4 col-sm-4"><strong>Nome</strong></div>
            <div class="col-xs-2 col-sm-2"><strong>Login</strong></div>
            <div class="col-xs-4 col-sm-4"><strong>E-mail</strong></div>
            <div class="col-xs-2 col-sm-2"><strong><center>Ações</center></strong></div>
          </div>

          <div class="clearfix"></div>

          <% @users.each do |us| %>
            <div class="row-info col-xs-12 col-sm-12 col-md-12" align="left">
              <div class="col-xs-4 col-sm-4"><%= us.name %></div>
              <div class="col-xs-2 col-sm-2"><%= us.login %></div>
              <div class="col-xs-4 col-sm-4"><%= us.email %></div>
              <div class="col-xs-2 col-sm-2" id="symbol_access" >
                <%= button_to user_path(us.id), :method => :get, :class => 'btn btn-success btn-sm', 'data-toggle' => 'tooltip', :title => 'Visualizar', 'id' => 'view-user-btn' do %>
                <i class="fa fa-eye"></i>
                <% end %>
                <%= button_to user_path(us.id), :method => :delete, :class => 'btn btn-danger btn-sm', 'data-toggle' => 'tooltip', :title => 'Remover', data: { confirm: "Você tem certeza?" }, 'id' => 'remove-user-btn' do %>
                  <i class="fa fa-minus"></i>
                <% end %>
              </div>
            </div>
          <% end %>

          <div class="clearfix"></div>

          <center>
          <div style="margin-top: 1em">
              <%= link_to new_user_path, :method => :get, :class => 'btn btn-success btn-xs', 'data-toggle' => 'tooltip', :title => 'Cadastra um novo usuário', 'id' => 'grant-access-btn' do %>
                  <i class="fa fa-plus-square"></i>
              <% end %>
          </div>
          <%= paginate @users %>
          </center>
        </div>
      </div>
    </div>
  </div>
</div>
