<%= form_tag("/form", method: "post") do %>

	<div class="field" align="left">
		<%= label_tag(:name, "Nome") %>
		<%= text_field(:person, :name, class: 'form-control') %>
	</div>

	<div class="field" align="left">
		<%= label_tag(:email, "Email") %>
		<%= email_field(:person, :email, class: 'form-control') %>
	</div>

	<div class="field" align="left">
		<%= label_tag(:message, "Mensagem") %>
		<%= text_field(:person, :message, class: 'form-control') %>
	</div>

	<div class="actions">
		</br>
  		<%= submit_tag("Enviar", class: "btn btn-primary") %>
  	</div>
<% end %>