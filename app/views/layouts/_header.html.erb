<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-left">
        <%= link_to image_tag("shared/logo", :alt => "Home", :class => "logo", "style" => "width: 25px; height: 25px;"), root_path, id: "logo" %>
      </ul>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Calendário",   calendar_path %></li>      	
