            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Perfil",  current_user %></li>
              <li><%= link_to "Configurações",  '#' %></li>
              <li class="divider"></li>
              <li><%= link_to "Logout",   logout_path, method: :delete %></li>
