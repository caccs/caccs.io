<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag '//fonts.googleapis.com/css?family=Droid Sans', 'application.css' %>
    <%= render 'layouts/rails_default' %>
    <%= render 'layouts/shim' %>
    <%= yield :scripts %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <%= render partial: 'layouts/show', flash: flash %>
    <div class="container">
      <%= yield %>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
